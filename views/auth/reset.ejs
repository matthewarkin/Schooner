<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <form id="signup-form" action="/auth/newpass" method="post">
        <div class="form-group">
          <input id="username" type="password" name="password" class="form-control" placeholder="Password" value="" autofocus>
        </div>
        <div class="form-group">
          <input class="form-control" type="password" name="passwordconfirm" id="password" placeholder="Confirm Password">
        </div>
        <input class="" type="hidden" name="uid" value="<%= user.id %>">
        <button class="btn btn-default btn-signin pull-right" type="submit"><i class="fa fa-check"></i> Login</button>
      </form>
    </div>
  </div>
</div>
